<odoo noupdate="1">

    <record id="mail_template_shopinvader_sale_reminder" model="mail.template">
        <field name="name">Shopinvader sale reminder</field>
        <field name="email_from">${(object.user_id.email or '')|safe}</field>
        <field name="subject">Reminder ${object.name}</field>
        <field name="partner_to">${object.partner_id.id}</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="auto_delete" eval="False"/>
        <field name="lang">${object.partner_id.lang}</field>
        <field name="body_html"><![CDATA[ To customize ]]></field>
    </record>

</odoo>
