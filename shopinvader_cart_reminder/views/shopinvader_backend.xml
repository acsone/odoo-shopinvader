<odoo>
    <record model="ir.ui.view" id="shopinvader_backend_form_view">
        <field name="name">shopinvader.backend.form (in shopinvader_cart_reminder)</field>
        <field name="model">shopinvader.backend</field>
        <field name="inherit_id" ref="shopinvader.shopinvader_backend_view_form"/>
        <field name="priority" eval="90"/>
        <field name="arch" type="xml">
            <page name="email" position="inside">
                <group>
                    <group>
                        <field name="quotation_reminder"/>
                        <field name="quotation_reminder_mail_template_id" attrs="{'invisible': [('quotation_reminder', '&lt;=', 0)], 'required': [('quotation_reminder', '&gt;', 0)]}"/>
                    </group>
                    <group></group>
                </group>
            </page>
        </field>
    </record>
</odoo>
