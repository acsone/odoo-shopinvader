<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">

    <record id="connector_search_engine.ir_cron_recompute_all_index" model="ir.cron">
        <field name="active" eval="False" />
    </record>

    <record forcecreate="True" id="cron_recompute_all_index_continuous" model="ir.cron">
        <field name="name">Search engine: recompute all indices (Update)</field>
        <field name="active" eval="True" />
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">10</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False" />
        <field name="model">se.index</field>
        <field name="function">cron_recompute_all_continuous</field>
        <field name="args">()</field>
        <field eval="1" name="run_as_queue_job" />
    </record>

    <record forcecreate="True" id="cron_recompute_all_index_batch" model="ir.cron">
        <field name="name">Search engine: recompute all indices (Batch)</field>
        <field name="active" eval="True" />
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False" />
        <field name="model">se.index</field>
        <field name="function">cron_recompute_all_batch</field>
        <field name="args">()</field>
        <field eval="1" name="run_as_queue_job" />
    </record>

