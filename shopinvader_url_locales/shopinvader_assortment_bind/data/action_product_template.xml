<odoo>
    <record
    model="ir.actions.server"
    id="action_shopinvader_template_assortment_binding"
  >
        <field name="name">Shopinvader Assortment Binding</field>
        <field name="model_id" ref="product.model_product_template" />
        <field name="state">code</field>
        <field name="code">records.shopinvader_assortment_binding()
        </field>
    </record>
    <record id="run_action_shopinvader_template_assortment_binding" model="ir.values">
            <field name="model_id" ref="product.model_product_template" />
            <field name="name">Shopinvader Assortment Binding</field>
            <field name="key2">client_action_multi</field>
            <field name="key">action</field>
            <field name="model">product.template</field>
            <field
      name="value"
      eval="'ir.actions.server,' + str(ref('action_shopinvader_template_assortment_binding'))"
    />
    </record>
</odoo>
