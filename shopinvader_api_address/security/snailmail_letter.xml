<odoo>
    <!-- allow authenticated partner to snailmail_letter where it is used-->
    <record id="shopinvader_address_snailmail_letter_rule" model="ir.rule">
        <field name="name">Shopinvader Address Endpoint rule: snailmail_letter</field>
        <field name="model_id" ref="snailmail.model_snailmail_letter" />
        <field
            name="groups"
            eval="[(4, ref('shopinvader_api_address.shopinvader_address_user_group'))]"
        />
        <field name="domain_force">[('partner_id','=',authenticated_partner_id)]</field>
        
    </record>

    <record id="shopinvader_address_snailmail_letter_access" model="ir.model.access">
        <field name="name">Shopinvader Address: user read snailmail_letter</field>
        <field name="model_id" ref="snailmail.model_snailmail_letter" />
        <field name="group_id" ref="shopinvader_address_user_group" />
        <field name="perm_read" eval="True" />
        <field name="perm_write" eval="False" />
        <field name="perm_create" eval="False" />
        <field name="perm_unlink" eval="False" />
    </record>

</odoo>
